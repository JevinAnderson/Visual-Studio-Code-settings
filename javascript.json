      "  // componentDidUpdate(prevProps, prevState) {}",
      "  // componentWillUnmount() {}",
      "  render() {",
      "    return (",
      "      <div className=\"${2:Component Class}\">",
      "      </div>",
      "    );",
      "  }",
      "}",
      "",
      "${1:Name of Component}.propTypes = {};",
      "",
      "${1:Name of Component}.defaultProps = {};",
